%div(ng-controller="MainCtrl")
  %h3 Scroller
  .scroller
    .body
      .content(ng-bind-html="content")
    .controll
      .btn-group
        %a#back.btn.btn-primary(ng-click="tl.reverse()")
          %i.glyphicon.glyphicon-backward
        %a#pause.btn.btn-primary(ng-click="tl.paused(!tl.paused())")
          %i.glyphicon(ng-class="tl.paused() ? 'glyphicon-play' : 'glyphicon-pause'")
        %a#forward.btn.btn-primary(ng-click="tl.reversed(false)")
          %i.glyphicon.glyphicon-forward
        .btn.btn-primary
          %slider#slider(ng-model="progress" min="0" max="100" step=1 on-slide="updateTlProgress()")
        %select#speed.selectpicker.speeder(data-style="btn-primary" ng-model="timeScale" ng-change="updateTimeScale()")
          %option(value=1 selected="true" ) x1
          %option(value=2) x2
          %option(value=4) x4
  .col-sm-4
    %text-angular(ng-model="content")